<div class="container">
  <h1>Lista de Empleados</h1>
  <div class="well">
   <div class="input-group">
      <span class="input-group-addon icon icon-search"></span>
      <input type="search" class="form-control" placeholder="Buscar" id="searchTerm" onkeyup="doSearch()">
    </div>
    <% if !@empleado.blank? %>
   <table id="dataTable" class="table table-striped table-bordered">
        <table border="2"  class="table table-bordered">
          <tr>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Correo Electronico</th>
          </tr>

          <% @empleado.each do |e| %>
              <tr>
                <td><%= e.first_name %></td>
                <td><%= e.last_name %></td>
                <td><%= e.email %></td>
                <% if admin_signed_in?  %>
              <td><%= link_to 'Ver', edit_empleado_path(e),  class: 'glyphicon glyphicon-eye-open btn btn-info btn-sm ' %></td>
                <% end %>
              </tr>
          <% end %>
        </table>
        </br>
        <%= paginate @empleado, :theme => 'twitter-bootstrap-3'%>
  <% else %>
        <br/>
        <h3>No hay registros</h3>
        <br/>
    <% end %>
  </div>
</div>