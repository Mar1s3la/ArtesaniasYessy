<div class="container">
  <h1> Venta de <%= @vent.empleado.first_name %>  <%= @vent.empleado.last_name %>  del
    <%=@vent.updated_at.strftime("%d-%m-%Y a las %H:%M:%S") %></h1>
  <div class="well">
    <p>
      Generar:
      <%= link_to "Excel", vent_path(@vent.id, format: "xls"), class: 'btn btn-success'  %>|
      <%= link_to "Pdf", vent_path(@vent.id, format: "pdf"), class: 'btn btn-info'  %>
    </p>
<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <td>Empleado</td>
    <td><%= @vent.empleado.first_name %>  <%= @vent.empleado.last_name %></td>
    <td>Fecha</td>
    <td><%=@vent.updated_at  %></td>
  </tr>
  <tr>
    <td>Producto</td>
    <td>Tama√±o</td>
    <td>Cantidad</td>
    <td>Precio</td>
    <td>Subtotal</td>
  </tr>
  </thead>
  <tbody>
  <% @vent.vent_items.each do |i| %>
      <tr>
        <td><%= i.producto.producto %></td>
        <td><%= i.producto.tamano.tamano %></td>
        <td><%= i.quantity %></td>
        <td> <%=number_to_currency  i.producto.precio %></td>
        <td> <%=number_to_currency  i.total_price %></td>
      </tr>
  <% end %>
  </tbody>
  <tfoot>
  <td>Total Venta:</td>
  <td></td>
  <td></td>
  <td></td>
  <td><%=number_to_currency @vent.total %></td>
  </tfoot>
</table>

<%=  link_to 'Regresar', :back, class: 'btn btn-warning btn-sm' %>
</div>
  </div>
