<?xml version="1.0"?>
<Workbook xmlns="urn:schemas-microsoft-com:office:spreadsheet"
          xmlns:o="urn:schemas-microsoft-com:office:office"
          xmlns:x="urn:schemas-microsoft-com:office:excel"
          xmlns:ss="urn:schemas-microsoft-com:office:spreadsheet"
          xmlns:html="http://www.w3.org/TR/REC-html40">
  <Worksheet ss:Name="Sheet1">
    <Table>
      <Row>
        <Cell><Data ss:Type="String">Artesanias Yessy</Data></Cell>
      </Row>
      <Row>
        <Cell><Data ss:Type="String">Cliente</Data></Cell>
        <Cell><Data ss:Type="String"><%=@order.user.first_name %><%=@order.user.last_name %></Data></Cell>
        <Cell><Data ss:Type="String">Fecha</Data></Cell>
        <Cell><Data ss:Type="String"><%=@order.updated_at.strftime("%d-%m-%Y a las %H:%M:%S")   %></Data></Cell>
      </Row>
      <Row>
        <Cell><Data ss:Type="String">Producto</Data></Cell>
        <Cell><Data ss:Type="String">Tama√±o</Data></Cell>
        <Cell><Data ss:Type="String">Cantidad</Data></Cell>
        <Cell><Data ss:Type="String">Precio</Data></Cell>
        <Cell><Data ss:Type="String">Subtotal</Data></Cell>
      </Row>
      <% @order.order_items.each do |i| %>
          <Row>
            <Cell><Data ss:Type="String"><%= i.producto.producto %></Data></Cell>
            <Cell><Data ss:Type="String"><%= i.producto.tamano.tamano %></Data></Cell>
            <Cell><Data ss:Type="Number"><%= i.quantity %></Data></Cell>
            <Cell><Data ss:Type="Number"><%= i.producto.precio %></Data></Cell>
            <Cell><Data ss:Type="Number"><%= i.total_price %></Data></Cell>
          </Row>
      <% end %>
      <Row>
        <Cell><Data ss:Type="String">Total Venta:</Data></Cell>
        <Cell></Cell>
        <Cell></Cell>
        <Cell></Cell>
        <Cell><Data ss:Type="Number"><%=@order.subtotal %></Data></Cell>
      </Row>
    </Table>
  </Worksheet>
</Workbook>