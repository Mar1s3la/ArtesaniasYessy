<div class="container">
<h1>Catalogo de Tamaños </h1>
  <div class="well">
    <% if empleado_signed_in? || admin_signed_in?  %>
      <%= link_to 'Nuevo Tamaño', new_tamano_path, class: 'btn btn-success btn-sm'    %>
    <% end %>
	
   <div class="input-group">
      <span class="input-group-addon icon icon-search"></span>
      <input type="search" class="form-control" placeholder="Buscar" id="searchTerm" onkeyup="doSearch()">
    </div>
    <% if !@tamano.blank? %>
   <table id="dataTable" class="table table-striped table-bordered">
  <tr>
    <th>Tamaño</th>
    <th>Descripcion</th>
    <th colspan="3">Acciones</th>
  </tr>

  <% @tamano.each do |t| %>
      <tr>
        <td><%= t.tamano %></td>
        <td><%= t.descripcion  %></td>
        <td><%= link_to 'Ver', tamano_path(t), class: 'btn btn-info glyphicon glyphicon-eye-open', :style => 'color: white' %></td>
        <% if empleado_signed_in? || admin_signed_in?  %>
          <td><%= link_to 'Modificar', edit_tamano_path(t),  class: 'btn btn-warning btn-sm' %></td>
          <td><%= link_to 'Borrar', tamano_path(t), class: 'btn btn-danger btn-sm',
                        method: :delete,  data: { confirm: '¿Seguro que desea eliminar este tamaño?' } %></td>
       <% end %>
      </tr>
  <% end %>
</table>
        </br>
        <%= paginate @tamano, :theme => 'twitter-bootstrap-3'%>
  <% else %>
    <br/>
<h3>No hay registros</h3>
    <br/>
<% end %>
    </div>
  </div>